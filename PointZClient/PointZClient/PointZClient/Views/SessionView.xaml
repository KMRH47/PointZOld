<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PointZClient.Views.SessionView"
             xmlns:viewModelsBase="clr-namespace:PointZClient.ViewModels.Base;assembly=PointZClient"
             NavigationPage.HasNavigationBar="False"
             viewModelsBase:ViewModelLocator.AutoWireViewModel="True">

    <ContentPage.Content>

        <StackLayout Orientation="Vertical"
                     Height="{Binding StackLayoutHeightPixels}"
                     Style="{StaticResource StackLayoutStyle}">
            
            <Grid VerticalOptions="EndAndExpand"
                  Style="{StaticResource GridStyle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition /> <ColumnDefinition /> <ColumnDefinition /> <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Text="lol 1" Height="{Binding ButtonHeightPixels}" />
                <Button Grid.Column="1" Text="lol 2" />
                <Button Grid.Column="2" Text="lol 3" />
                <Button Grid.Column="3" Text="lol 4" />
            </Grid>
            
        </StackLayout>

    </ContentPage.Content>
</ContentPage>