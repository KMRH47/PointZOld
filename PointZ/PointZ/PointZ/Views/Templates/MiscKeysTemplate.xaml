<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PointZ.Views.Templates.MiscKeysTemplate">

    <ContentView.Content>
        <StackLayout>
            <FlexLayout>
                <!-- CTRL -->
                <Button Text="ctrl" />
                <!-- Windows -->
                <Button Text="&#xF17A;" />
                <!-- ALT -->
                <Button Text="alt" />
            </FlexLayout>

            <FlexLayout>
                <!-- Page Down -->
                <Button Text="pg d" />
                <!-- Arrow up -->
                <Button Text="&#xF176;" />
                <!-- Page Down -->
                <Button Text="pg up" />
            </FlexLayout>

            <FlexLayout>
                <!-- Arrow Left -->
                <Button Text="&#xF177;" />
                <!-- Arrow Down -->
                <Button Text="&#xF175;" />
                <!-- Arrow Right -->
                <Button Text="&#xF178;" />
            </FlexLayout>
        </StackLayout>
    </ContentView.Content>
</ContentView>