<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PointZ.Views.Templates.MediaKeysView">

    <ContentView.Resources>
        <ResourceDictionary>
            <Style TargetType="{x:Type FlexLayout}">
                <Setter Property="JustifyContent" Value="SpaceBetween" />
            </Style>
        </ResourceDictionary>
    </ContentView.Resources>

    <ContentView.Content>
        <StackLayout>
            <FlexLayout>
                <!-- Rewind -->
                <Button Text="&#xE809;" />
                <!-- Play/Pause -->
                <Button Text="&#xE803;&#xE805;" />
                <!-- Forward -->
                <Button Text="&#xE808;" />
            </FlexLayout>

            <FlexLayout>
                <!-- Previous -->
                <Button Text="&#xE80B;" />
                <!-- Stop -->
                <Button Text="&#xE804;" />
                <!-- Next -->
                <Button Text="&#xE80A;" />
            </FlexLayout>

            <FlexLayout>
                <!-- Volume Up -->
                <Button Text="&#xE80C;" />
                <!-- Mute -->
                <Button Text="&#xE806; &#xE807;" />
                <!-- Volume Up-->
                <Button Text="&#xE80D;" />
            </FlexLayout>
        </StackLayout>
    </ContentView.Content>
</ContentView>