<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PointZ.Views.Templates.ServerTemplate">

    <ContentView.Resources>
        <ResourceDictionary>
            <Style TargetType="{x:Type Label}">
                <Setter Property="FontSize" Value="Medium" />
                <Setter Property="TextColor"
                        Value="{AppThemeBinding 
                        Dark={StaticResource White90},
                        Light={StaticResource Black90}}" />
            </Style>
        </ResourceDictionary>
    </ContentView.Resources>

    <ContentView.Content>
        <Grid Margin="5" VerticalOptions="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <Label Grid.Column="0" Text="{Binding Name}" HorizontalOptions="Start" />
            <Label Grid.Column="1" Text="{Binding IpEndPoint.Address}" HorizontalOptions="End" />
        </Grid>
    </ContentView.Content>

</ContentView>