<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PointZ.Views.SessionView"
             xmlns:viewModelsBase="clr-namespace:PointZ.ViewModels.Base;assembly=PointZ"
             NavigationPage.HasNavigationBar="False"
             viewModelsBase:ViewModelLocator.AutoWireViewModel="True">

    <ContentPage.Content>

        <StackLayout Orientation="Vertical"
                     Height="{Binding StackLayoutHeightPixels}"
                     Style="{StaticResource StackLayoutStyle}">
            
            <StackLayout.GestureRecognizers>
                <TapGestureRecognizer  Command="{Binding TapCommand}"/>
            </StackLayout.GestureRecognizers>
            
            <Grid VerticalOptions="EndAndExpand"
                  Style="{StaticResource GridStyle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition /> <ColumnDefinition /> <ColumnDefinition /> <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Text="Test" Height="{Binding ButtonHeightPixels}" />
                <Button Grid.Column="1" Text="Test" />
                <Button Grid.Column="2" Text="Test" />
                <Button Grid.Column="3" Text="Test" />
            </Grid>
            
        </StackLayout>

    </ContentPage.Content>
</ContentPage>